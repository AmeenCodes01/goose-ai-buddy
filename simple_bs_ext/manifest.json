{
  "manifest_version": 3,
  "name": "Simple Productivity Buddy",
  "version": "1.0.0",
  "description": "Simple URL logging when switching tabs",
  
  "permissions": [
    "tabs",
    "activeTab"
  ],
  
  "host_permissions": [
    "http://localhost/*"
  ],
  
  "background": {
    "service_worker": "simple_background_new.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["simple_content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_title": "Simple Productivity Buddy"
  }
}
